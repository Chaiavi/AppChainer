                                    <Insets top="10.0" />
                                 </VBox.margin>
                                 <graphic>
                                    <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@images/down.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <tooltip>
                                    <Tooltip text="Move app downward in current chain" />
                                 </tooltip>
                              </Button>
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
